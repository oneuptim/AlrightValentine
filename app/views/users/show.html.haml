#profile_view

  %h1
    Profile:
    = @user.username

  .show_profile_pic
    = image_tag @user.image_url(:show).to_s
  %p
    %strong About:
    = @user.about
  %p
    %strong Hobbies:
    = @user.hobbies
  %p
    %strong Location:
    = @user.location
  %p
    %strong Age:
    = @user.age
  %p
    %strong Gender:
    = @user.gender
  %p
    %strong Gender Preferences:
    = @user.genderpreferences
